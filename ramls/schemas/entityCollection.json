{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "description": "Collection of entities",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "entities": {
      "id": "entitiesList",
      "type": "array",
      "description": "List of entities",
      "items": {
        "type": "object",
        "$ref": "entity.json"
      }
    },
    "totalRecords": {
      "description": "Total number of entities",
      "type": "integer"
    }
  },
  "required": [
    "fileExtensions",
    "totalRecords"
  ]
}
